<% if object.errors.any? %>
  <% object.errors.full_messages.each.with_index do |message, id| %>
    <div style="display: block !important" id="toast_<%= id %>" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="toast-header">
        <strong class="me-auto">Error</strong>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close" onclick="closeToast('#toast_<%= id %>')"></button>
      </div>
      <div class="toast-body">
        <%= message %>
      </div>
    </div>
  <% end %>
<% end %>
<script>
  function closeToast(target) {
    const tar = document.querySelector(target);
    tar.style = 'none';
  }
</script>
